/*
3.	Name Cases: Store a person’s name in a variable, and then print that person’s name in lowercase, 
uppercase, and titlecase.*/


function toTitleCase(input: string): string {
    return input.toLowerCase().replace(/(?:^|\s)\w/g, (match) => match.toUpperCase());
  }
  
  // Example usage:
    const titleCasedString = toTitleCase(personName);
    console.log ("Question 3")  
  console.log(titleCasedString ); // Output: "Hello World"
  


console.log(personName.toLowerCase() ) ;
console.log(personName.toUpperCase()) ;

